<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp">

    <TextView
        android:id="@+id/tv_location_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_is_reserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_location_id"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_reservation_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_is_reserved"
        android:text="@string/reservation_information"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_min_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_reservation_information"
        android:layout_marginRight="5dp"
        android:text="@string/min_time"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_max_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reservation_information"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/tv_min_time"
        android:text="@string/max_time"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_min_booking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_min_time"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_max_booking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_min_booking_time"
        android:layout_alignBottom="@+id/tv_min_booking_time"
        android:layout_toEndOf="@+id/tv_min_time"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_max_booking_time"
        android:layout_toEndOf="@+id/tv_min_booking_time"
        android:onClick="reserveSpace"
        android:text="@string/pay_and_reserve"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_max_time"
        android:layout_toEndOf="@+id/tv_max_time"
        android:text="@string/cost"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_reserve_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_cost"
        android:layout_below="@+id/tv_cost"
        android:textAlignment="center"
        android:textStyle="bold" />


</RelativeLayout>